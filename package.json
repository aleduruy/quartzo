{
  "name": "quartzo",
  "version": "0.0.1",
  "license": "MIT",
  "main": "index.web.js",
  "react-native": "src/components",
  "scripts": {
    "start:prod": "ws -p ${PORT:=8000} -d .docz/dist --spa index.html",
    "release": "release-it",
    "release:rc": "release-it --preRelease=${TAG:=rc} --npm.tag=rc",
    "pretest": "npm run svg:web",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "dev:web": "webpack-dev-server",
    "dev:native": "brand=${BRAND:=suba} run-p svg:native && react-native start",
    "build:webpack": "webpack",
    "build:docz": "docz build",
    "svg:component": "mkdir -p ./src/assets/${BRAND:=suba}/svg/components && svgr --native ./src/assets/${BRAND:=suba}/svg/icons --out-dir ./src/assets/${BRAND:=suba}/svg/components --template ./template-svg.js --filename-case kebab",
    "svg:web": "brand=${BRAND:=suba}",
    "svg:native": "brand=${BRAND:=suba} run-p svg:component && node ./tasks/svg",
    "svg:acom": "BRAND=acom run-p svg:component",
    "svg:suba": "BRAND=suba run-p svg:component",
    "svg:shop": "BRAND=shop run-p svg:component",
    "build": "run-p build:*",
    "test": "run-p jest lint",
    "jest": "jest --coverage=${COVERAGE:=false}",
    "test:watch": "jest --watch --verbose",
    "lint": "eslint src",
    "docz:dev": "docz dev",
    "optimize:svg": "svgo -f ./src/assets/${BRAND:=suba}/svg/icons"
  },
  "peerDependencies": {
    "babel-plugin-transform-class-properties": ">=6.24.1",
    "babel-plugin-transform-inline-environment-variables": ">=0.2.0",
    "react": ">=16.0.0",
    "react-native": ">=0.47",
    "react-native-svg": ">=5.4.2",
    "rnpm": ">=1.9.0",
    "styled-components": "3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-external-helpers": "7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "7.0.0",
    "@mdx-js/tag": "0.15.0",
    "@rebass/markdown": "1.0.0",
    "@svgr/cli": "2.4.1",
    "@svgr/core": "3.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "9.0.0",
    "babel-jest": "23.6.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-jest-hoist": "23.2.0",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-styled-components": "1.6.4",
    "babel-plugin-transform-inline-environment-variables": "0.2.0",
    "babel-preset-react-native": "5",
    "cross-cookie": "0.0.9",
    "cross-fetch": "2.2.2",
    "docz": "0.12.13",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "eslint": "5.5.0",
    "eslint-config-google": "0.9.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jest": "21.3.2",
    "eslint-plugin-prettier": "2.1.2",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-react-native": "3.1.0",
    "jest": "23.6.0",
    "jest-dot-reporter": "1.0.7",
    "jest-environment-node": "23.4.0",
    "jest-react-native": "18.0.0",
    "metro-react-native-babel-preset": "0.45.1",
    "npm-run-all": "4.1.3",
    "prettier": "1.3.1",
    "prop-types": "15.6.0",
    "react": "16.6.0",
    "react-component-component": "1.2.1",
    "react-dom": "16.6.0",
    "react-native": "0.56",
    "react-native-router-flux": "4.0.1",
    "react-native-svg": "6.5.2",
    "rebass": "2.1.0",
    "release-it": "7.4.7",
    "styled-components": "3.4.5",
    "svgson": "2.1.0",
    "webpack": "4.17.2",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.8"
  },
  "dependencies": {
    "docz-theme-default": "^0.12.13",
    "styled-theming": "2.2.0",
    "styled-tools": "0.4.0"
  }
}
